{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2020",
    "moduleResolution": "node",
    "removeComments": true,
    "noLib": false,
    "pretty": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "**/__mocks__/*", "**/*.spec.ts"]
}
